FROM rust:1.75 AS builder

# Set working directory
WORKDIR /app

# Copy the entire project
COPY . .

# Build the test server
RUN cargo build --release --bin test-server

FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy the test server binary
COPY --from=builder /app/target/release/test-server /usr/local/bin/test-server

# Create a non-root user
RUN useradd -r -s /bin/false testserver

# Switch to non-root user
USER testserver

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=5s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3001/health || exit 1

# Default command
CMD ["/usr/local/bin/test-server", "--port", "3001"]
